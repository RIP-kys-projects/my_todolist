<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
	<form class="form pure-form">
		<fieldset>
			<input class="form__input"
				type="url" name="href"
				required="required"
				placeholder="url"/>

			<input class="form__input"
				type="text" name="anchor"
				required="required"
				placeholder="anchor"/>
			<button class="form__btn pure-button" type="submit">
				Save
			</button>

		</fieldset>
	</form>
</fest:template>